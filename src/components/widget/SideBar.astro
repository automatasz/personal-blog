---
import Profile from "@components/widget/Profile.astro";
import Tag from "@components/widget/Tags.astro";
import Categories from "@components/widget/Categories.astro";
import type { MarkdownHeading } from "astro";

interface Props {
  class?: string;
  headings?: MarkdownHeading[];
}

const className = Astro.props.class;
---

<div class:list={[className, "w-full"]} id="sidebar">
  <div class="flex flex-col w-full gap-4 mb-4">
    <Profile />
  </div>
  <div class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky" id="sidebar-sticky">
    <Categories class="onload-animation" style="animation-delay: 150ms" />
    <Tag class="onload-animation" style="animation-delay: 200ms" />
  </div>
</div>
